<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:background="@drawable/whitebackground"
    tools:context=".PostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="30sp"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/curriculum"
        android:layout_below="@+id/group"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="30sp"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studyClass"
        android:layout_below="@+id/curriculum"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="30sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjectList"
        android:layout_below="@+id/studyClass"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/buttonColorRed"
        android:text="Choose Subjects"
        android:textColor="@color/WhiteColor"
        android:textSize="15sp"
        android:paddingVertical="20sp"
        android:gravity="center_horizontal"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/salary"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="number"
        app:met_floatingLabel="normal"
        android:hint="Salary"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="textMultiLine"
        app:met_floatingLabel="normal"
        android:hint="Description"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="30sp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="textMultiLine"
        app:met_floatingLabel="normal"
        android:hint="Detailed Address"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:background="@drawable/button_round_edge"
        android:textColor="@color/WhiteColor"
        android:text="Submit"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        />

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="20sp"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/curriculum"
        android:layout_below="@+id/group"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="20sp"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studyClass"
        android:layout_below="@+id/curriculum"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="20sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjectList"
        android:layout_below="@+id/studyClass"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/WhiteColor"
        android:text="Choose Subjects"
        android:textSize="20sp"
        android:gravity="start"
        android:textAlignment="viewStart"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/salary"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/subjectList"
        android:layout_marginHorizontal="10dp"
        android:textSize="20sp"
        android:textColor="@color/BlackColor"
        android:inputType="number"
        android:hint="Salary"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/salary"
        android:layout_marginHorizontal="10dp"
        android:textSize="20sp"
        android:textColor="@color/BlackColor"
        android:inputType="textMultiLine"
        android:hint="Description"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@+id/description"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="20sp"
        android:textColor="@color/BlackColor"
        android:inputType="textMultiLine"
        android:hint="Address"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        />

</RelativeLayout>
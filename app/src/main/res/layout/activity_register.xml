<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="480dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose User Type"
        android:id="@+id/text_create_new_account"
        android:layout_marginTop="28sp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textStyle="bold"/>



    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Tutor"
        android:textSize="20sp"
        android:id="@+id/btn_tutor"
        android:background="@color/colorButtonSelect"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/WhiteColor"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textSize="20sp"
        android:id="@+id/btn_student"
        android:background="@color/colorButtonSelect"
        android:layout_below="@id/btn_tutor"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/WhiteColor"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherRegActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="280dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Student Account"
        android:id="@+id/text_create_new_account"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_create_new_account"
        app:met_floatingLabel="normal"
        android:hint="Username"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/username"
        android:layout_marginTop="10dp"
        app:met_floatingLabel="normal"
        android:hint="Email"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        app:met_floatingLabel="normal"
        android:hint="Password"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FullName"
        android:layout_below="@+id/password"
        android:layout_marginTop="10dp"
        app:met_floatingLabel="normal"
        android:hint="Full Name"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContactNo"
        android:layout_below="@+id/FullName"
        android:layout_marginTop="10dp"
        app:met_floatingLabel="normal"
        android:hint="ContactNo"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20sp"
        android:id="@+id/btn_register"
        android:background="@color/colorButtonSelect"
        android:layout_below="@+id/ContactNo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/WhiteColor"
        />




</RelativeLayout>